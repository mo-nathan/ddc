from log_parser.block_summary import BlockSummary


EXAMPLE_DATA_BLOCK = [
    {"url": "/"},
    {"url": "/foo"},
    {"url": "/foo/bar"},
    {"url": "/foo/bar/baz"},
    {"url": "/woof"},
    {"url": "/woof"},
]


class TestBlockSummary(object):
    def test_block_summary(self):
        summary = BlockSummary(EXAMPLE_DATA_BLOCK, top_n=1)
        result = summary.summarize()
        assert "/foo" in result[0]
        assert "/woof" not in result[0]

    def test_block_summary_of_nothing(self):
        summary = BlockSummary([])
        result = summary.summarize()
        assert "Nothing" in result[0]
